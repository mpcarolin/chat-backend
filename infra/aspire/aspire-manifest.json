{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "api": {
      "type": "container.v1",
      "build": {
        "context": "../../packages/api",
        "dockerfile": "../../packages/api/Dockerfile"
      },
      "env": {
        "CHAT_PROVIDER": "mock",
        "OLLAMA_MODEL": "gemma3:1b",
        "AZURE_QNA_ENDPOINT": "",
        "AZURE_QNA_API_KEY": "",
        "AZURE_QNA_PROJECT_NAME": "",
        "AZURE_QNA_DEPLOYMENT_NAME": ""
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8090
        }
      }
    },
    "language-service": {
      "type": "azure.bicep.v0",
      "path": "language-service.module.bicep"
    }
  }
}
